<Window
        x:Class="QuanLyChamThi.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChamThi.ViewModel"
        xmlns:page="clr-namespace:QuanLyChamThi.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" MinHeight="360" MinWidth="640" KeyDown="Window_KeyDown" WindowStartupLocation="CenterOwner" MouseDown="Window_MouseDown">
    <Grid x:Name="mainGrid">

        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="31" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ElementName=mainScreen, Path=Content.Title}"/>

        <Canvas x:Name="canvasExtendedSideBar" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="18" Background="AliceBlue" Panel.ZIndex="1" Visibility="Hidden" MouseLeave="canvasExtendedSideBar_MouseLeave"/>
        <DockPanel x:Name="pnlSideBar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="18" Background="AliceBlue" Panel.ZIndex="2" LastChildFill="True" MouseEnter="canvasExtendedSideBar_MouseEnter" >
            <Button DockPanel.Dock="Top">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/teacher.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Thông tin"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Top">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/question.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Câu hỏi"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Top">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/test.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Đề thi"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Top">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/document.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Bài chấm"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Top">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/report.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Báo cáo"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Bottom">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/cancel.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Đăng xuất"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Button DockPanel.Dock="Bottom">
                <WrapPanel>
                    <Image Source="/QuanLyChamThi;component/Icon/setting.ico"/>
                    <Canvas VerticalAlignment="Center" Visibility="{Binding ElementName=canvasExtendedSideBar, Path=Visibility, Mode=OneWay}">
                        <Label Content="Cài đặt"/>
                    </Canvas>
                </WrapPanel>
            </Button>
            <Separator Background="Transparent"/>
        </DockPanel>
        
        <Button x:Name="btnBack" Grid.Column="1" Grid.Row="1" Content="Quay xe"/>
        <TextBlock x:Name="tbHistory" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="30" HorizontalAlignment="Left" VerticalAlignment="Center" Text="https://facebook.com"/>
        <Frame Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="31" Grid.RowSpan="17" x:Name="mainScreen" NavigationUIVisibility="Hidden" />
    </Grid>

</Window>
