                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="7" Content="Số lượng môn học:" Foreground="Black" FontWeight="Bold"/>
                    <TextBox x:Name="tbDSubjectNumber"
                             Grid.Column="1" 
                             Grid.Row="2"
                             Grid.ColumnSpan="7"
                             VerticalAlignment="Center"
                             TextAlignment="Left"
                             Text="{Binding NumberOfSubject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             />

                    <Button x:Name="btnUpdateSubject" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="7" Content="Cập nhật"/>
                    <DataGrid x:Name="dgSubjectList" Padding="10" ItemsSource="{Binding ListSubject, Mode=TwoWay}" Grid.Column="9" Grid.Row="1" Grid.ColumnSpan="19" Grid.RowSpan="10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STT" Width="1*"/>
                            <DataGridTextColumn Header="Mã môn học" Binding="{Binding IDSubject, Mode=TwoWay}" Width="3*"/>
                            <DataGridTextColumn Header="Tên môn học" Binding="{Binding Name, Mode=TwoWay}" Width="7*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Tùy chỉnh lớp học" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="37"/>
                        <ColumnDefinition Width="37*"/>
