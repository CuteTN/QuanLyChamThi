                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
