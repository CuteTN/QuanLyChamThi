                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                        <ColumnDefinition Width="38*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="7" Content="Số lượng lớp học:" Foreground="Black" FontWeight="Bold"/>
                    <TextBox x:Name="cbClassNumber"
                             Grid.Column="1" 
                             Grid.Row="2"
                             Grid.ColumnSpan="7"
                             VerticalAlignment="Center"
                             TextAlignment="Left"
                             Text="{Binding NumberOfClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             />

                    <Button x:Name="btnUpdateClass" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="7" Content="Cập nhật"/>

                    <Label Grid.Column="9" Grid.Row="1" Grid.ColumnSpan="3" Content="Năm học:" Foreground="Black" FontWeight="Bold"/>
                    <ComboBox Grid.Column="12" ItemsSource="{Binding Year}" SelectedItem="{Binding SelectedYear}" Grid.Row="1" Grid.ColumnSpan="3"/>

                    <Label Grid.Column="17" Grid.Row="1" Grid.ColumnSpan="3" Content="Học kỳ:" Foreground="Black" FontWeight="Bold"/>
                    <ComboBox Grid.Column="20" ItemsSource="{Binding Semester}" SelectedItem="{Binding SelectedSemester}" Grid.Row="1" Grid.ColumnSpan="3"/>

                    <DataGrid x:Name="dgClassList"  ItemsSource="{Binding ListClass}" AutoGenerateColumns="False" Grid.Column="9" Grid.Row="2" Grid.ColumnSpan="19" Grid.RowSpan="9" CanUserAddRows="True" Padding="10" Margin="0,12,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên lớp học" Binding="{Binding ClassName}" Width="2*"/>
                            <DataGridTemplateColumn Header="Tên môn học" Width="6*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding Path=Data.ListSubjectForClass, Source={StaticResource proxy}}" SelectedItem="{Binding Subject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Học kỳ" Binding="{Binding Semester}" Width="2*"/>
                            <DataGridTextColumn Header="Năm học" Binding="{Binding Year}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Tùy chỉnh khác" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="37*"/>
