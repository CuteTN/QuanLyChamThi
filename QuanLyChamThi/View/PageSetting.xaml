                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="5" Content="Số lượng câu hỏi tối đa" HorizontalContentAlignment="Left" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <TextBox Text="{Binding MaxQuestionAmount, Mode=TwoWay}" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>

                    <Label Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" Content="Thời lượng tối đa cho đề thi" HorizontalContentAlignment="Left" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <TextBox Text="{Binding MaxTestDuration, Mode=TwoWay}" Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>

                    <Label Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="5" Content="Thời lượng tối thiểu cho đề thi" HorizontalContentAlignment="Left" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <TextBox Text="{Binding MinTestDuration, Mode=TwoWay}" Grid.Column="7" Grid.Row="3" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>

                    <Label Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="5" Content="Số điểm tối đa" HorizontalContentAlignment="Left" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <TextBox Text="{Binding MaxTestScore, Mode=TwoWay}" Grid.Column="7" Grid.Row="4" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>

                    <Label Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="5" Content="Số điểm tối thiểu" HorizontalContentAlignment="Left" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom"/>
                    <TextBox Text="{Binding MinTestScore, Mode=TwoWay}" Grid.Column="7" Grid.Row="5" Grid.ColumnSpan="4" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Button x:Name="btnOK" Command="{Binding OKCommand}" Grid.Column="27" Grid.Row="16" Grid.ColumnSpan="3" Content="Lưu"/>
        <Button x:Name="btnCancel" Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding CancelCommand}" Grid.Column="23" Grid.Row="16" Grid.ColumnSpan="3" Content="Hủy"/>

