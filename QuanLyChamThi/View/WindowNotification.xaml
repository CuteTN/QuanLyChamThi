<Window x:Class="QuanLyChamThi.View.WindowNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyChamThi.View"
        mc:Ignorable="d"
        Title="THÔNG BÁO" Height="100" Width="300" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid x:Name="mainGrid" Background="Transparent" MouseDown="mainGrid_MouseDown">
        <Border x:Name="border" BorderThickness="1" CornerRadius="5" Background="White">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Width="100" Height="50">
                    <Image Height="50" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/QuanLyChamThi;component/Icon/okay.ico"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock x:Name="tbNotification" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="tbDetail" HorizontalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
