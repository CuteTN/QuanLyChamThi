<Page x:Class="QuanLyChamThi.View.PageReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:QuanLyChamThi.View"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1200"
      Title="LẬP BÁO CÁO NĂM">

    <Grid Background="WhiteSmoke" x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stpnl" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="29" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Chọn năm" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom" FontSize="14"/>

            <ComboBox x:Name="cbYear" ItemsSource="{Binding ListYear}" SelectedItem="{Binding StrSelectedYear}" HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Bottom" Margin="14,0,0,0" Width="80" FontSize="14">
                <!--<ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding ToString}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>-->
            </ComboBox>
            <Button Content="Tạo báo cáo" Padding="0" Width="160" Margin="28,0,0,0" FontSize="14"/>
        </StackPanel>

        <Label Grid.Column="1" Grid.Row="15" Grid.ColumnSpan="3" Foreground="Black" FontWeight="Bold" VerticalAlignment="Bottom" Content="Tổng số đề thi:"/>
        <Label x:Name="tbTotalTest" Grid.Column="4" Grid.Row="15" Foreground="Black" Content="50"  Grid.ColumnSpan="3" VerticalAlignment="Bottom"/>

        <Label Grid.Column="8" Grid.Row="15" Grid.ColumnSpan="4" VerticalAlignment="Bottom" Content="Tổng số bài chấm:" FontWeight="Bold" Foreground="Black"/>
        <Label x:Name="tbTotalTestResult" Content="49" Foreground="Black" Grid.Column="12" Grid.Row="15" Grid.ColumnSpan="3" VerticalAlignment="Bottom"/>


        <ScrollViewer x:Name="svGrid" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="29" Grid.RowSpan="12" Margin="0,0,0,12" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="dgReport" AutoGenerateColumns="False" ItemsSource="{Binding ListReport, Mode=TwoWay}"
                      Width="{Binding ElementName=svGrid, Path=ActualWidth}" CanUserResizeColumns="False" CanUserReorderColumns="False"
                      CanUserSortColumns="False" Background="White" Style="{StaticResource MaterialDesignDataGrid}" Padding="10">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colSTT" Header="STT" Width="2*"/>
                    <DataGridTextColumn x:Name="colName" Binding="{Binding Subject}" Header="Tên môn" Width="5*"/>
                    <DataGridTextColumn x:Name="colTestNumber" Header="Số lượng đề thi" Width="5*"/>
                    <DataGridTextColumn x:Name="colTestResultNumber" Header="Số lượng bài chấm" Width="5*"/>
                    <DataGridTextColumn x:Name="colTestRatio" Header="Tỉ lệ đề thi" Width="5*"/>
                    <DataGridTextColumn x:Name="colTestResultRatio" Header="Tỉ lệ bài chấm" Width="5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>


        <DockPanel Grid.Column="27" Grid.Row="16" Grid.ColumnSpan="3" LastChildFill="True">
            <Button VerticalAlignment="Center" Content="Lưu file"/>
        </DockPanel>

        <DockPanel Grid.Column="23" Grid.Row="16"  Grid.ColumnSpan="3" LastChildFill="True" >
            <Button VerticalAlignment="Center" Content="In báo cáo" Style="{StaticResource MaterialDesignRaisedAccentButton}" Foreground="White"/>
        </DockPanel>

    </Grid>
</Page>
